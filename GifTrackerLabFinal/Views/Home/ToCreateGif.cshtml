@model GifTrackerLabFinal.Models.GifTracker

<h1>Add a new Gif here</h1>

<form asp-action="CreateGif" method="post"> 
    <div class="form-group">
        <label asp-for="URL">Gif URL YUH</label>
        <input asp-for="URL" class="form-control"/>
        <span asp-validation-for="URL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Gif Name YUH</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating">Gif Rating YUH</label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <button type="submit">Create Gif YUHH</button>
</form>